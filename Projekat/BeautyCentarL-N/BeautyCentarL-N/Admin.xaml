        <TextBlock Text="Zelite uvid u placanje?" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch"  FontSize="55" FontWeight="Light" Margin="140 20 0 0"></TextBlock>
