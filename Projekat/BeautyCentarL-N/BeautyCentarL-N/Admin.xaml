    <Grid >

        <TextBlock Text="Dobrodosao" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Stretch"  FontSize="60" FontWeight="Bold" Margin="430 20 0 0"></TextBlock>
        <TextBlock Text="admine!" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" HorizontalAlignment="Stretch"  FontSize="60" FontWeight="Bold" Margin="40 20 0 0"></TextBlock>
