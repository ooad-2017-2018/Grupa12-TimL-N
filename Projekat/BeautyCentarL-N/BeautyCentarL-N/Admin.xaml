        <Button Content="Azuriraj" Grid.Row="1" Grid.Column="1" Height="50" Width="200" HorizontalAlignment="Stretch" FontSize="23" FontWeight="Bold" Margin="-400 0 180 0"></Button>
        <Button Content="Azuriraj" Grid.Row="2" Grid.Column="1" Height="50" Width="200" HorizontalAlignment="Stretch" FontSize="23" FontWeight="Bold" Margin="-400 0 180 0"></Button>
        <Button Content="Pregledaj" Grid.Row="3" Grid.Column="1" Height="50" Width="200" HorizontalAlignment="Stretch" FontSize="23" FontWeight="Bold" Margin="-400 0 180 0"></Button>
        <Button Content="Uvidi" Grid.Row="4" Grid.Column="1" Height="50" Width="200" HorizontalAlignment="Stretch" FontSize="23" FontWeight="Bold" Margin="-400 0 180 0"></Button>
        <Button Content="Izbrisi" Grid.Row="5" Grid.Column="1" Height="50" Width="200" HorizontalAlignment="Stretch" FontSize="23" FontWeight="Bold" Margin="-400 0 180 0"></Button>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/josjednaslika.jpg"/>
